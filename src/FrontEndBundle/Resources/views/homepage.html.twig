{#  extend base.html.twig   #}
{% extends ('FrontEndBundle::base.html.twig') %}

{#  INCLUDE HANDED-CODE FILE    #}
{% block header %}
    <link rel="stylesheet" href="{{ asset('bundles/framework/css/homepage.css') }}" />
    <script src="{{ asset('bundles/framework/js/homepage.js') }}"></script>

{% endblock %}

{#  TITLE   #}
{% block title %} HOME PAGE {% endblock %}

{#  CONTENT   #}
{% block content %}

{#  FASHION SHOPS   #}
    <div class="content-field">
{#  FASHION SHOP HEADER     #}
        <div class="content-header">
            <div class="category">
                <img src="{{ asset('bundles/framework/images/fashion.png') }}" width="auto">
            </div>
            <div class="product-bar">
                <nav>
                    <ul class="nav nav-tabs">
                        <li class="active" id="cap-product">
                            <a data-toggle="tab" href="#cap">
                                <img src="{{ asset('bundles/framework/images/cap.png') }}">
                            </a>
                        </li>
                        <li id="shoe-product">
                            <a data-toggle="tab" href="#shoe">
                                <img src="{{ asset('bundles/framework/images/shoe.png') }}">
                            </a>
                        </li>
                        <li id="jacket-product">
                            <a data-toggle="tab" href="#jacket">
                                <img src="{{ asset('bundles/framework/images/jacket.png') }}">
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

        </div>

{#  FASHION SHOP CONTENT    #}
        <div class="content-body">
            <div id="fashion-shop-img" class="owl-carousel">

                {% for i in 0..3 %}

                <div>
                    <div class="img-field" style="border: 1px solid #c0c0c0">
                        <a href="#"><img class="img-rounded" src="{{ asset('bundles/framework/images/shop-1.png') }}"></a>
                    </div>
                    <div class="img-field"style="border: 1px solid #c0c0c0">
                        <a href="#"><img class="img-rounded" src="{{ asset('bundles/framework/images/shop-2.png') }}"></a>
                    </div>
                </div>

                {% endfor %}

            </div>
        </div>
    </div>




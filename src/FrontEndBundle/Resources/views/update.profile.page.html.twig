                    <div class="update-user-info">
                        Password
                    </div>
                    <input class="input-field">
                </div>
                <div class="update-user-data-field">
                    <div class="update-user-info">
                        Confirm Password
                    </div>
                    <input class="input-field">
                </div>
                <div class="update-user-data-field">
                    <div class="update-user-info">
                        Gender
                    </div>
                    <input class="input-field">
                </div>
                <div class="update-user-data-field">
                    <div class="update-user-info">
                        Date Of Birth
                    </div>
                    <input class="input-field">
                </div>
                <div class="update-user-data-field">
                    <div class="update-user-info">
                        Status
                    </div>
                    <input type="radio" name="status" value="buyer"> Buyer
                    <input type="radio" name="status" value="sale-man" style="margin-left: 2em"> Sale Man
                </div>


                <h4><b>CONTACT INFORMATION</b></h4>
                <div class="update-user-data-field">
                    <div class="update-user-info">
                        Email
                    </div>
                    <input class="input-field">
                </div>
                <div class="update-user-data-field">
                    <div class="update-user-info">
                        Phone Number
                    </div>
                    <input class="input-field">
                </div>
                <div class="update-user-data-field">
                    <div class="update-user-info">
                        Address
                    </div>
                    <input class="input-field">
                </div>


                <h4><b>ADDITIONAL INFORMATION</b></h4>
                <div class="update-user-data-field">
                    <div class="update-user-info">
                        Website
                    </div>
                    <input class="input-field">
                </div>
                <div class="update-user-data-field">
                    <div class="update-user-info">
                        Company
                    </div>
                    <input class="input-field">
                </div>
                <div class="update-user-data-field">
                    <div class="update-user-info">
                        Job
                    </div>
                    <input class="input-field">
                </div>
                <div class="update-user-data-field">
                    <div class="update-user-info">
                        Hobbie
                    </div>
                    <input class="input-field">
                </div>
                <button id="save-btn" class="btn btn-primary" type="submit">SAVE</button>

            </form>


        </div>



{#  RIGHT DIRECTION #}
        <div class="right-direction">
            <div id="user-vote">
                <a href=""><img class="img-rounded" src="{{ asset('bundles/framework/images/UserProfilePage/UserVote.png') }}"></a>
            </div>
            <div class="find-me-on">
                Find me on:

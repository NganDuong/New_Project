                <a href=""><img class="img-circle social-logo" src="{{ asset('bundles/framework/images/UserProfilePage/Google-plus.png') }}" ></a>
                <a href=""><img class="img-circle social-logo" src="{{ asset('bundles/framework/images/UserProfilePage/Twitter.png') }}" ></a>
            </div>
        </div>



    </div>






